<Window x:Class="WpfForPrism.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfForPrism.Views"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="模塊A" Width="80" Height="30" Command="{Binding ShowContentCmm }" CommandParameter="UCA"></Button>
            <Button Content="模塊B" Width="80" Height="30" Command="{Binding ShowContentCmm }" CommandParameter="UCB"></Button>
            <Button Content="模塊C" Width="80" Height="30" Command="{Binding ShowContentCmm }" CommandParameter="UCC"></Button>
        </StackPanel>

        <ContentControl Content="{Binding ShowContent}" Grid.Row="1"></ContentControl>
    </Grid>
</Window>
